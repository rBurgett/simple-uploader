{
  "name": "simple-s3-uploader",
  "version": "0.3.0",
  "description": "simple-uploader",
  "main": "dist/index.js",
  "scripts": {
    "start": "electron .",
    "build": "node ./build-scripts/clear-build-dir && babel src --out-dir dist --verbose && npm run scss",
    "watch": "babel src --out-dir dist --watch --verbose",
    "build-native": "npm run build && node ./build-scripts/copy-build-files.js && cd temp && yarn install --production && cd .. && electron-builder --dir",
    "pack-native": "npm run build && node ./build-scripts/copy-build-files.js && cd temp && yarn install --production && cd .. && electron-builder",
    "publish-native": "node ./build-scripts/copy-build-files.js && cd temp && npm install --production && cd .. && electron-builder --publish always",
    "scss": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 scss/main.scss public/css/main.css",
    "watch-scss": "nodemon -w scss -e scss -x npm run scss"
  },
  "repository": "git+https://github.com/rBurgett/simple-uploader.git",
  "author": "Ryan Burgett <ryan@burgettweb.net>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/rBurgett/simple-uploader/issues"
  },
  "homepage": "https://github.com/rBurgett/simple-uploader#readme",
  "private": true,
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.6",
    "@babel/plugin-transform-modules-commonjs": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "babel-eslint": "^10.1.0",
    "babel-preset-react-app": "^9.1.2",
    "clean-css-cli": "^4.3.0",
    "electron": "^8.2.5",
    "electron-builder": "^22.6.0",
    "eslint": "^6.8.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "less-plugin-autoprefixer": "^2.1.0",
    "lodash": "^4.17.10",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.3",
    "postcss-cli": "^7.1.1",
    "rmrf-promise": "^1.1.0"
  },
  "dependencies": {
    "archiver": "^4.0.1",
    "electron-context-menu": "^0.10.0",
    "electron-is-dev": "^0.3.0",
    "electron-updater": "^4.3.1",
    "fs-extra": "^9.0.0",
    "moment": "^2.25.3",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "s3": "https://github.com/rBurgett/node-s3-client.git",
    "uuid": "^3.3.2"
  },
  "build": {
    "electronVersion": "8.2.5",
    "appId": "com.ryanburgett.simple-s3-uploader",
    "productName": "Simple S3 Uploader",
    "copyright": "Copyright © 2020 Ryan Burgett",
    "directories": {
      "app": "temp",
      "output": "dist-native"
    },
    "win": {
      "verifyUpdateCodeSignature": false,
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "./public/images/favicon.ico",
      "publish": {
        "provider": "github",
        "releaseType": "draft"
      }
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities",
      "icon": "./public/images/simple-uploader.icns",
      "publish": {
        "provider": "github",
        "releaseType": "draft"
      }
    },
    "linux": {
      "target": "appImage",
      "icon": "./public/images/linux_icons/",
      "synopsis": "Copyright © 2020 Ryan Burgett",
      "description": "Copyright © 2020 Ryan Burgett",
      "category": "Utility",
      "desktop": {
        "Name": "Simple S3 Uploader"
      },
      "publish": {
        "provider": "github",
        "releaseType": "draft"
      }
    }
  }
}
